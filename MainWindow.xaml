<Window x:Class="WpfOlzServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:WpfOlzServer"
        Title="Olz Server" Height="600" Width="900" 
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <Window.Resources>


    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" MinWidth="180"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="10">
            <DockPanel>
                <Button DockPanel.Dock="Bottom" Content="서버 추가" Margin="0,10,0,0" Height="30" Click="Btn_AddServer_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                <GroupBox Header="서버 목록" Style="{StaticResource ModernGroupBoxStyle}">
                    <ListBox x:Name="ServerListBox" SelectionChanged="ServerListBox_SelectionChanged" BorderThickness="0" ItemContainerStyle="{StaticResource ServerListBoxItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="10" Height="10" Fill="LimeGreen" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
            </DockPanel>
        </Border>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

        <Grid Grid.Column="2" Margin="0,10,10,10">
            <TabControl BorderThickness="0" Background="Transparent" ItemContainerStyle="{StaticResource ModernTabItemStyle}">

                <TabItem Header="서버 제어 및 로그">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" MinHeight="150"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                            <ContentControl x:Name="ServerControlContent">
                                <TextBlock Text="왼쪽 목록에서 서버를 선택하여 제어판을 표시합니다." 
                                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                                           Foreground="Gray" TextWrapping="Wrap"/>
                            </ContentControl>
                        </Border>

                        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                            <GroupBox Header="서버 로그" Style="{StaticResource ModernGroupBoxStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBox Grid.Row="0" x:Name="LogTextBox" Style="{StaticResource LogTextBoxStyle}"/>

                                    <Button Grid.Row="1" Content="Log Clear" Margin="0,10,0,0" Style="{StaticResource PrimaryButtonStyle}" Click="Btn_ClearLog_Click"/>
                                </Grid>
                            </GroupBox>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="접속 클라이언트">
                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <DataGrid Grid.Row="0" x:Name="ClientListDataGrid" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding SelectedItem.ConnectedClients, ElementName=ServerListBox}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="사용자 이름" Binding="{Binding UserName}" Width="*"/>
                                    <DataGridTextColumn Header="IP 주소" Binding="{Binding IpAddress}" Width="*"/>
                                    <DataGridTextColumn Header="접속 시간" Binding="{Binding ConnectTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="1.5*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Grid.Row="1" Content="선택한 클라이언트 강제 종료" Margin="0,10,0,0" Style="{StaticResource PrimaryButtonStyle}" />
                        </Grid>
                    </Border>
                </TabItem>

                <TabItem Header="일정 관리">
                    <Border Style="{StaticResource CardStyle}">
                        <local:ScheduleManagementView DataContext="{Binding SelectedItem.ScheduleViewModel, ElementName=ServerListBox}"/>
                    </Border>
                </TabItem>

            </TabControl>
        </Grid>
    </Grid>
</Window>