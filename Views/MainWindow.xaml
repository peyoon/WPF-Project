<dx:DXWindow xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="WpfLogin.Views.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:local="clr-namespace:WpfLogin"
             Title="OlzLogin" Height="720" Width="500" WindowStartupLocation="CenterScreen">

    <dx:DXWindow.DataContext>
        <local:MainWindowViewModel/>
    </dx:DXWindow.DataContext>

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#A03223"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="Button" x:Key="BaseButtonStyle">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#EB911E"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D6831C"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BDBDBD"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#EEEEEE"/>
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#F5C837" Offset="0.0"/>
                <GradientStop Color="#EB911E" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Width="380" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" CornerRadius="15" Padding="35">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.1" BlurRadius="15"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <Image Source="/face/olzeteklogo.png" Height="70" Margin="0,0,0,30" />

                <TextBlock Text="사원번호" Style="{StaticResource LabelStyle}"/>
                <dxe:TextEdit Margin="0,0,0,15" EditValue="{Binding EmployeeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="비밀번호" Style="{StaticResource LabelStyle}"/>
                <dxe:PasswordBoxEdit Margin="0,0,0,20" EditValue="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <Expander Header="서버 설정" FontWeight="SemiBold" Foreground="Gray" Margin="0,0,0,15">
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="IP 주소" Style="{StaticResource LabelStyle}"/>
                        <dxe:TextEdit Margin="0,0,0,10" EditValue="{Binding IpAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsDisconnected}"/>
                        <TextBlock Text="포트" Style="{StaticResource LabelStyle}"/>
                        <dxe:TextEdit Margin="0,0,0,15" EditValue="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsDisconnected}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="서버 연결" Margin="0,0,5,0" Command="{Binding ConnectCommand}" IsEnabled="{Binding IsDisconnected}" Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Grid.Column="1" Content="연결 끊기" Margin="5,0,0,0" Command="{Binding DisconnectCommand}" IsEnabled="{Binding IsConnected}" Style="{StaticResource SecondaryButtonStyle}"/>
                        </Grid>
                    </StackPanel>
                </Expander>

                <TextBlock Text="{Binding StatusText}" HorizontalAlignment="Center" Foreground="#A03223" FontWeight="Bold" Margin="0,0,0,15" MinHeight="20"/>

                <Button Content="Olz in" 
                        FontSize="20" 
                        Margin="0,10,0,0"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsConnected}" 
                        Style="{StaticResource PrimaryButtonStyle}" Height="45"/>
            </StackPanel>
        </Border>
    </Grid>
</dx:DXWindow>